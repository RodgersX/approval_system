<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Enter the Email</h3>
          </div>
          <div class="panel-body">
            <form role="form">
              <fieldset>
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: "E-mail"%>
                </div>
                <%= f.submit "Password instructions", class: 'btn btn-lg btn-success btn-block'%>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end -%>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>