<div class="container">
  <%= simple_form_for @request_approval do |f| %>
    <%= f.input :name, label: 'Request title' %>
    <%= f.input :description, label: 'Request description' %>
    <%=f.label 'Approver name'%>
    <%= f.select(:approver_id, options_from_collection_for_select(@users, :id, :email),
                 prompt: 'Please Select')%> </br>
    <%= f.button :submit %>
  <% end %>
</div>
